<h1><%= @task.title %></h1>
<h2><%= link_to "Edit", edit_task_path %></h2>

<div class="box">
  <%= @task.details %>
</div>

<% if @task.completed %>
  <p><input type="checkbox" checked="">This task is completed!</p>
<% else %>
  <p><input type="checkbox">This task is not completed yet</p>
<% end %>

<%= link_to "Back to list", "/tasks" %>
